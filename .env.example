# Server Configuration
PORT=3000
NODE_ENV=development

# Backend Firebase Admin Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----"
FIREBASE_PRIVATE_KEY_ID=your-private-key-id

# Frontend Firebase Configuration (VITE_ prefix required)
VITE_FIREBASE_API_KEY=your_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_domain
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_bucket
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Security Configuration
ALLOWED_ORIGINS=http://localhost:5173,https://your-production-domain.com

# Database Configuration
DB_PATH=./data/waitlist.db

# Backup Configuration
BACKUP_DIR=./data/backups
BACKUP_INTERVAL=86400000  # 24 hours in milliseconds
MAX_BACKUPS=5

# Frontend Configuration
VITE_API_URL=http://localhost:3000/api
VITE_PROD_API_URL=https://your-netlify-site.netlify.app/api
